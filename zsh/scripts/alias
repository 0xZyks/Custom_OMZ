#!/usr/bin/env bash

# === NAV
alias fluidbin="cd ~/.fluidbin"
alias zshcfg="nvim ~/.zshrc"
alias dotfiles="cd ~/.dotfiles/config"

# === SYSTEM
alias c='chpwd'
alias l="eza -l --icons"
alias la="eza -la --icons"
alias lt="eza --icons --tree"
alias std="sudo shutdown now"
alias rb="sudo reboot"
alias rmf="rm -rf"
alias su="sudo -s"

# === CODING
alias ccf="cc -Wall -Wextra -Werror -o exe"
alias norminette="norminette -R CheckDefine"
alias n="nvim ."
alias nv="nvim"

# === APPS
alias deezer="run_detached deezer-desktop"
alias discord="run_detached vesktop"
alias chatgpt="run_detached env WEBKIT_DISABLE_DMABUF_RENDERER=1 GDK_BACKEND=x11 chat-gpt"
