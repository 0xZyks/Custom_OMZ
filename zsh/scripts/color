#!/usr/bin/env bash

# COLORS

ORANGE=$'%{\e[38;2;240;170;90m%}'
WHITE=$'%{\e[38;2;255;255;255m%}'
BLUE=$'%{\e[38;2;149;176;255m%}'
AQUA=$'%{\e[38;2;110;140;240m%}'
RESET="%{$reset_color%}"
GIT_USER_COLOR=${BLUE}
GIT_REPO_COLOR=${AQUA}
GIT_BRANCH_COLOR=$'%{\e[38;2;240;170;90m%}'
GIT_OK=$'%{\e[38;2;120;220;120m%}'
GIT_BAD=$'%{\e[38;2;240;120;120m%}'

UNDER=$'%{\e[4m%}'
NO_UNDER=$'%{\e[24m%}'
